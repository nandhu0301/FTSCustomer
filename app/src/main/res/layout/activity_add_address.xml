<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="15dp"
            android:background="@drawable/ic_outline_arrow"
            android:backgroundTint="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Delivery Address"
            android:textColor="@color/cyanbase"
            android:textSize="15dp" />


    </LinearLayout>

    <ScrollView
        android:overScrollMode="never"
        android:scrollbars="none"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/layout_header"
        android:scrollbarSize="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:backgroundTint="#4Dffffff"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/addnewAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="15dp"
                        android:drawableLeft="@drawable/ic_baseline_add"
                        android:fontFamily="@font/lato"
                        android:gravity="left|center_vertical|center"
                        android:padding="10dp"
                        android:text="Add new address"
                        android:textColor="@color/black"
                        android:textSize="15dp"></TextView>


                    <androidx.cardview.widget.CardView
                        android:layout_margin="2dp"
                        android:visibility="invisible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/firstAddressLayout">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:id="@+id/firstAddressLayoutRelative"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="5dp"
                                android:visibility="invisible">

                                <RadioButton
                                    android:layout_margin="8dp"
                                    android:buttonTint="@color/cyanbase"
                                    android:id="@+id/AddressOneRb"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/customerNameOneTxt"
                                    android:layout_marginRight="60dp"
                                    android:gravity="center|left"
                                    android:text="G4/1,kuthitaipadai police quatras,vishwanathapuram,madurai,625014"
                                    android:textSize="13dp"></RadioButton>

                                <TextView
                                    android:id="@+id/customerNameOneTxt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="36dp"
                                    android:layout_marginRight="50dp"
                                    android:text="Name"
                                    android:textColor="@color/black"
                                    android:textSize="18dp"/>


                                <TextView
                                    android:layout_marginTop="5dp"
                                    android:id="@+id/phoneNumberOneTxt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/AddressOneRb"
                                    android:layout_marginLeft="36dp"
                                    android:layout_marginRight="50dp"
                                    android:text="Phonenumber"
                                    android:textColor="@color/black"
                                    android:textSize="13dp"></TextView>


                                <TextView
                                    android:maxLength="100"
                                    android:id="@+id/addresstypetext"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/phoneNumberOneTxt"
                                    android:layout_marginLeft="30dp"
                                    android:layout_marginTop="-2dp"
                                    android:layout_marginRight="50dp"
                                    android:drawablePadding="1dp"
                                    android:gravity="center|left"
                                    android:paddingTop="10dp"
                                    android:text="Phonenumber"
                                    android:textColor="@color/cyanbase"
                                    android:textSize="14dp"></TextView>

                                <TextView
                                    android:id="@+id/imageOne"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="0dp"
                                    android:layout_marginRight="20dp"
                                    android:foregroundGravity="right"
                                    android:gravity="right"
                                    android:text="EDIT"
                                    android:textColor="@color/cyanbase"
                                    android:textSize="13dp">

                                </TextView>

                            </RelativeLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_margin="2dp"
                        android:visibility="invisible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/secondAddressLayout">
                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/firstAddressLayout"
                            android:layout_margin="2dp"

                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:id="@+id/SecondAddressLayoutRelative"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="5dp"
                                android:visibility="invisible">

                                <RadioButton
                                    android:layout_margin="5dp"
                                    android:buttonTint="@color/cyanbase"
                                    android:id="@+id/AddresstwoRb"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/customerNametwoTxt"
                                    android:layout_marginRight="60dp"
                                    android:gravity="center|left"
                                    android:text="G4/1,kuthitaipadai police quatras,vishwanathapuram,madurai,625014"
                                    android:textSize="13dp"></RadioButton>

                                <TextView

                                    android:id="@+id/customerNametwoTxt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="36dp"
                                    android:layout_marginRight="50dp"
                                    android:text="Name"
                                    android:textColor="@color/black"
                                    android:textSize="18dp"></TextView>

                                <TextView
                                    android:layout_marginTop="5dp"
                                    android:id="@+id/phoneNumbertwoTxt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/AddresstwoRb"
                                    android:layout_marginLeft="36dp"
                                    android:layout_marginRight="50dp"
                                    android:text="Phonenumber"
                                    android:textColor="@color/black"
                                    android:textSize="13dp"></TextView>

                                <TextView
                                    android:maxLength="100"
                                    android:id="@+id/addresstypetwotext"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/phoneNumbertwoTxt"
                                    android:layout_marginLeft="30dp"
                                    android:layout_marginRight="50dp"
                                    android:drawablePadding="5dp"
                                    android:gravity="center|left"
                                    android:paddingTop="10dp"
                                    android:text="Phonenumber"
                                    android:textColor="@color/cyanbase"
                                    android:textSize="14dp"></TextView>


                                <TextView
                                    android:id="@+id/imageTwo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="0dp"
                                    android:layout_marginRight="20dp"
                                    android:foregroundGravity="right"
                                    android:gravity="right"
                                    android:text="EDIT"
                                    android:textColor="@color/cyanbase"
                                    android:textSize="13dp">

                                </TextView>


                            </RelativeLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_margin="2dp"
                        android:visibility="invisible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/thirdAddresslayout">
                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/secondAddressLayout"
                            android:layout_margin="2dp"

                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:id="@+id/thirdAddresslayoutRelative"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:visibility="invisible">

                                <TextView
                                    android:id="@+id/imageThree"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="0dp"
                                    android:layout_marginRight="20dp"
                                    android:foregroundGravity="right"

                                    android:gravity="right"
                                    android:text="EDIT"
                                    android:textColor="@color/cyanbase"
                                    android:textSize="13dp">

                                </TextView>

                                <RadioButton
                                    android:layout_margin="5dp"
                                    android:buttonTint="@color/cyanbase"
                                    android:id="@+id/AddressthreeRb"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/customerNamethreeTxt"
                                    android:layout_marginRight="60dp"
                                    android:gravity="center|left"
                                    android:text="G4/1,kuthitaipadai police quatras,vishwanathapuram,madurai,625014"
                                    android:textSize="13dp"></RadioButton>

                                <TextView

                                    android:id="@+id/phoneNumberthreeTxt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/AddressthreeRb"
                                    android:layout_marginLeft="36dp"
                                    android:layout_marginRight="50dp"
                                    android:gravity="center|left"
                                    android:text="Phonenumber"
                                    android:textColor="@color/black"
                                    android:textSize="13dp"></TextView>

                                <TextView
                                    android:maxLength="100"
                                    android:layout_marginTop="5dp"
                                    android:id="@+id/addresstypethreetext"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/phoneNumberthreeTxt"
                                    android:layout_marginLeft="30dp"
                                    android:layout_marginRight="50dp"
                                    android:drawablePadding="5dp"
                                    android:gravity="center|left"
                                    android:paddingTop="10dp"
                                    android:text="Phonenumber"
                                    android:textColor="@color/cyanbase"
                                    android:textSize="14dp"></TextView>

                                <TextView

                                    android:layout_marginLeft="36dp"
                                    android:id="@+id/customerNamethreeTxt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="50dp"
                                    android:text="Name"
                                    android:textColor="@color/black"
                                    android:textSize="18dp"></TextView>


                            </RelativeLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_margin="2dp"
                        android:layout_marginBottom="70dp"
                        android:visibility="invisible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/fourthAddresslayout">
                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/thirdAddresslayout"
                            android:layout_margin="2dp"

                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:id="@+id/fourthAddresslayoutRelative"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="5dp"
                                android:visibility="invisible">

                                <RadioButton
                                    android:layout_margin="5dp"
                                    android:buttonTint="@color/cyanbase"
                                    android:id="@+id/AddressfourRb"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/customerNamefourTxt"
                                    android:layout_marginRight="60dp"
                                    android:gravity="center|left"
                                    android:text="G4/1,kuthitaipadai police quatras,vishwanathapuram,madurai,625014"
                                    android:textSize="13dp"></RadioButton>

                                <TextView
                                    android:layout_marginLeft="36dp"
                                    android:id="@+id/customerNamefourTxt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="50dp"
                                    android:text="Name"
                                    android:textColor="@color/black"

                                    android:textSize="18dp"></TextView>

                                <TextView
                                    android:layout_marginTop="5dp"
                                    android:id="@+id/phoneNumberfourTxt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/AddressfourRb"
                                    android:layout_marginLeft="36dp"
                                    android:layout_marginRight="50dp"
                                    android:text="Phonenumber"
                                    android:textColor="@color/black"
                                    android:textSize="13dp"></TextView>

                                <TextView
                                    android:id="@+id/addresstypefourtext"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/phoneNumberfourTxt"
                                    android:layout_marginLeft="30dp"
                                    android:layout_marginRight="50dp"
                                    android:drawablePadding="5dp"
                                    android:gravity="center|left"
                                    android:paddingTop="10dp"
                                    android:text="Phonenumber"
                                    android:textColor="@color/cyanbase"
                                    android:maxLength="100"
                                    android:textSize="14dp"></TextView>


                                <TextView
                                    android:id="@+id/imageFour"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="0dp"
                                    android:layout_marginRight="20dp"
                                    android:foregroundGravity="right"
                                    android:gravity="right"
                                    android:text="EDIT"
                                    android:textColor="@color/cyanbase"
                                    android:textSize="13dp">

                                </TextView>


                            </RelativeLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>



                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:elevation="7dp"
            app:cardCornerRadius="0dp">

            <Button
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:id="@+id/paymentBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="1dp"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="2dp"
                android:background="@color/cyanbase"
                android:foregroundGravity="bottom"
                android:gravity="center|center_vertical"
                android:text="Proceed to Payment"
                android:textColor="@color/white"
                android:textSize="15dp"></Button>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</RelativeLayout>